    "src/builtin_pb/sentencepiece_model.pb.h",

    "src/bpe_model.cc",
    "src/bpe_model.h",
    "src/builder.cc",
    "src/builder.h",
    "src/char_model.cc",
    "src/char_model.h",
    "src/common.h",
    "src/error.cc",
    "src/filesystem.cc",
    "src/filesystem.h",
    "src/freelist.h",
    "src/init.h",
    "src/model_factory.cc",
    "src/model_factory.h",
    "src/model_interface.cc",
    "src/model_interface.h",
    "src/normalization_rule.h",
    "src/normalizer.cc",
    "src/normalizer.h",
    "src/sentencepiece_processor.cc",
    "src/sentencepiece_processor.h",
    "src/spec_parser.h",
    "src/unicode_script.cc",
    "src/unicode_script.h",
    "src/unicode_script_map.h",
    "src/unigram_model.cc",
    "src/unigram_model.h",
    "src/util.cc",
    "src/util.h",
    "src/word_model.cc",
    "src/word_model.h",
  ]

  configs -= [
    "//build/config/compiler:chromium_code",
    "//build/config/compiler:no_exceptions",
  ]
